pipeline {
	agent any
	tools {nodejs "my_node"}
    stages {
		stage('Build') {
			steps {
				sh 'npm install'
			}
		} 

		stage('SCM') {
			steps {
				sh 'checkout scm'
			}
		}

        stage('SonarQube analysis') {
			steps {
				script {
				scannerHome = tool 'SonarScanner'
				}
				withSonarQubeEnv('SonarScanner') {
				sh "${scannerHome}/bin/sonar-scanner"
				}
			}
    	}
	}
}