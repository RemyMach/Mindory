pipeline {
	agent any
	tools {nodejs "my_node"}
    stages {
		// stage('Build') {
		// 	steps {
		// 		sh 'npm install'
		// 	}
		// } 

        stage('SonarQube analysis') {
			steps {
				script {
					scannerHome = tool 'SonarQube Scanner 2.8'
				}
				withSonarQubeEnv('my_server') {
				sh "${scannerHome}/bin/sonar-scanner"
				}
			}
    	}
	}
}